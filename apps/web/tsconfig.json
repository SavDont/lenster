{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@components*": ["src/components*"],
      "@lib*": ["src/lib*"],
      "@gql*": ["src/graphql*"],
      "@generated*": ["src/generated*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
